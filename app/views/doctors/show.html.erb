<h2>Dr. <%= @doctor.name %></h2>
<h3>Department of <%= @doctor.department %></h3>

 <h4>Appointments:</h4>
<ul>
<% @doctor.appointments.each do |appt| %>
    <li> <%= appt.appointment_datetime.strftime('%B %d, %Y at %H:%M') %> with <%= link_to appt.patient.name, patient_path(appt.patient) %></li>
<% end %>
</ul>