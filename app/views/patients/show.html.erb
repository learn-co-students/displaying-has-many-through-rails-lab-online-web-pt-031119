

<h3>Appointments<%= @patient.name%></h3> <br>
<ul>
  <% @patient.appointments.each do |appointment| %>	
     
    <li><%=link_to appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M"), doctor_path(appointment.doctor) %> <%= link_to appointment.doctor.name, doctor_path(appointment.doctor)%> </li>	
 
  <% end %>	
</ul>